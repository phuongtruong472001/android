<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DAF8FB">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/left"
        android:id="@+id/imgBack"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn vui lòng nhập chiều cao cân nặng :"
        android:layout_margin="20dp"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="#6FB672"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Height(m) :"
            android:textSize="20dp"
            ></TextView>
        <EditText
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="edtheight"
            android:id="@+id/edtHeight"></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Weight(kg) :"
            android:textSize="20dp"
            ></TextView>
        <EditText
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="weight"
            android:id="@+id/edtWeight"></EditText>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="Submit"
        android:id="@+id/btnSubmit"></Button>

    <TextView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvBMI"
        android:text="abccccc"
        android:textSize="20dp"></TextView>
    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvKetQua"
        android:text="abccccc"
        android:textSize="20dp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tháp dinh dưỡng"
        android:layout_margin="50dp"
        android:textSize="20dp"
        android:background="#EAEFBB"
        android:id="@+id/tvThapdd1"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chế độ ăn"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        style="text-decoration: underline;"
        android:background="#EAEFBB"
        android:id="@+id/tvCheDoAn1"></TextView>



</LinearLayout>