<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:layout_margin="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Chọn căn bệnh"
        android:textColor="#000"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"></TextView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fix_button"
        android:layout_margin="20dp"
        android:id="@+id/ratioGoup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bệnh tim mạch"
            android:id="@+id/benhTimMach">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bệnh tiểu đường"
            android:id="@+id/benhTieuDuong">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bệnh huyết áp cao"
            android:id="@+id/benhHuyetApCao">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bệnh huyết áp thấp"
            android:id="@+id/benhHuyetApThap">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bệnh máu nhiễm mỡ"
            android:id="@+id/benhMauNhiemMo">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bệnh gout"
            android:id="@+id/benhGout">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bệnh viêm dạ dày"
            android:id="@+id/benhViemDaDay">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi không có bệnh"
            android:id="@+id/khongBenh">

        </RadioButton>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:background="@drawable/circle"
        android:id="@+id/btnSub"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="#6d1d17"
            android:layout_centerInParent="true"
            android:text="Kiểm tra"></TextView>
    </RelativeLayout>
</LinearLayout>