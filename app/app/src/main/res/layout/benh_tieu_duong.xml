<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đang tìm hiểu chế độ ăn hợp lý cho người mắc bệnh tiểu đường ?"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chế độ ăn là vấn đề quan trọng nhất trong điều trị tiểu đường với mục đích nhằm đảm bảo cung cấp đủ dinh dưỡng, cân bằng đủ cả về số lượng và chất lượng để có thể điều chỉnh tốt đường huyết, duy trì cân nặng theo mong muốn, đảm bảo cho người bệnh có đủ sức khoẻ để hoạt động và công tác phù hợp với từng cá nhân"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:text="Người mắc bệnh tiểu đường nên ăn những thực phẩm sau:"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:weightSum="5">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/ngu_coc"

                        android:layout_weight="4"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ngũ cốc nguyên hạt"

                        android:textStyle="bold"
                        android:textSize="15dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:weightSum="5">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/orange"
                        android:id="@+id/imgHoaQua"
                        android:layout_weight="4"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="hoa quả ít ngọt"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textSize="15dp"></TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:weightSum="5">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/vegetables"

                        android:layout_weight="4"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="rau củ quả"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                        android:textSize="15dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:weightSum="5">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/beef"

                        android:layout_weight="4"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="cá,các loại thịt nạc"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textSize="15dp"></TextView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:text="Người mắc bệnh tiểu đường nên hạn chế:"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:weightSum="6">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/rice"

                        android:layout_weight="4"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="gạo trắng, bánh mì"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="15dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:weightSum="6">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/candy"

                        android:layout_weight="4"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="các loại bánh kẹo ngọt"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="15dp"></TextView>
                </LinearLayout><LinearLayout
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:weightSum="6">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/jam"

                    android:layout_weight="4"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="mứt,hoa quả sấy khô"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="15dp"></TextView>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>